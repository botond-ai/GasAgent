# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# OpenAI API (Primary LLM Provider)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Vector DB (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_COLLECTION_HR=hr_knowledge
QDRANT_COLLECTION_IT=it_knowledge
QDRANT_COLLECTION_FINANCE=finance_knowledge
QDRANT_COLLECTION_MARKETING=marketing_knowledge
QDRANT_COLLECTION_LEGAL=legal_knowledge
QDRANT_COLLECTION_GENERAL=general_knowledge

# Database (PostgreSQL)
DATABASE_URL=postgresql://kruser:krpass123@postgres:5432/knowledgerouter

# Redis (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Frontend
FRONTEND_URL=http://localhost:3000

# LLM settings
LLM_TEMPERATURE=0.7
MAX_TOKENS=2048

# Performance / Feature Flags
USE_SIMPLE_PIPELINE=False  # True = fast RAG-only pipeline (15-20s), False = full LangGraph workflow (60-90s)
STRICT_RAG_MODE=true  # True = refuse to answer without RAG context, False = allow LLM general knowledge fallback

# Logging (optional, for structured logging)
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
JSON_LOGGING=true  # True = JSON format for Loki, False = standard text format

# Atlassian (Confluence + Jira) - IT Domain
# Generate API tokens at: https://id.atlassian.com/manage-profile/security/api-tokens
CONFLUENCE_BASE_URL=https://your-workspace.atlassian.net/wiki
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_EMAIL=your-email@example.com
JIRA_BASE_URL=https://your-workspace.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@example.com

# Google Drive API - Marketing Domain (Optional)
# Uses OAuth 2.0 with client_secret.json and token.json in backend/credentials/
# See docs/GOOGLE_DRIVE_SETUP.md for setup instructions
GOOGLE_DRIVE_FOLDER_ID=  # Optional: specific folder ID to sync
GOOGLE_DRIVE_CREDENTIALS_DIR=backend/credentials  # Default location
