# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT_S=60
OLLAMA_TEMPERATURE=0.2

# Agent Profile: FAST, BALANCED, or QUALITY
AGENT_PROFILE=BALANCED

# Model Overrides (optional - uses profile defaults if not set)
# OLLAMA_MODEL_PLANNER=qwen2.5:14b-instruct
# OLLAMA_MODEL_EXTRACTOR=qwen2.5:14b-instruct
# OLLAMA_MODEL_SUMMARIZER=llama3.1:8b
# OLLAMA_MODEL_FINAL=llama3.1:8b

# Embedding model for deduplication
OLLAMA_EMBED_MODEL=mxbai-embed-large:latest

# Fallback models (comma-separated, in order of preference)
OLLAMA_MODEL_FALLBACKS=gpt-oss:20b,qwen2.5:14b-instruct,llama3.1:8b,phi3.5:latest,llama3.2:3b

# Google Calendar Settings
GOOGLE_CALENDAR_ID=primary

# Option 1: Service Account Authentication (recommended for server-side)
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
# GOOGLE_IMPERSONATE_USER=user@domain.com  # For domain-wide delegation

# Option 2: OAuth Authentication (for personal accounts)
# GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
# GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8080
# GOOGLE_OAUTH_TOKEN_PATH=.google_token.json

# General Settings
APP_TIMEZONE=Europe/Budapest
LOG_LEVEL=INFO

# Memory Store
MEMORY_STORE_PATH=.memory_store.json

# Retry Settings
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
