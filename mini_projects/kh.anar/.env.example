OPENAI_API_KEY=your-openai-api-key
DATA_DIR=/app/data
VITE_API_URL=http://localhost:8000/api
# Optional: model to use for LLM + tools. Use a model that supports tools for web search
# (e.g., gpt-4o or gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Admin token for /admin endpoints
ADMIN_TOKEN=changeme

# Chroma settings
CHROMA_DIR=.chroma
CHROMA_COLLECTION=kb_collection
CHROMA_PERSIST=true

# RAG params
RAG_TOP_K=5
RAG_THRESHOLD=0.25
RAG_W_DENSE=0.7
RAG_W_SPARSE=0.3

# Chunking
CHUNK_SIZE=800
CHUNK_OVERLAP=128
